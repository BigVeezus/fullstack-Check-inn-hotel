<% layout('./layouts/boilerplate') %>
<h1>All listing of Hotels</h1>
<div>
  <a href="/hotels/new">Add New Hotel</a>
</div>
<% for (let hotel of hotels) {%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img
        class="img-fluid"
        alt=""
        src="<%= hotel.image %>"
        style="width: 500px; height: 300px"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= hotel.title %></h5>
        <p class="card-text"><%= hotel.description %></p>
        <p class="card-text">
          <small class="text-muted">
            <h5><b>$<%= hotel.price %> </b></h5></small
          >
        </p>
        <a class="btn btn-primary" href="/hotels/<%= hotel._id %> "
          >View <%= hotel.title %></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
